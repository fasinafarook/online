        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="filter-options mb-3">
                            <a href="/admin/order?filter=day" class="btn btn-sm btn-primary">Day</a>
                            <a href="/admin/order?filter=week" class="btn btn-sm btn-primary">Week</a>
                            <a href="/admin/order?filter=month" class="btn btn-sm btn-primary">Month</a>
                            <a href="/admin/order?filter=year" class="btn btn-sm btn-primary">Year</a>
                           
                          </div>
                        <table class="table table-hover">
                            <div class="filter-options mb-3">
                                <!-- Filter options for selecting status -->
                                <a href="/admin/order?filter=<%= filter %>" class="btn btn-sm btn-primary">All</a>
                                <a href="/admin/order?filter=<%= filter %>&status=Processing" class="btn btn-sm btn-primary">Processing</a>
                                <a href="/admin/order?filter=<%= filter %>&status=Order Placed" class="btn btn-sm btn-primary">Order Placed</a>
                                <a href="/admin/order?filter=<%= filter %>&status=Cancelled" class="btn btn-sm btn-primary">Cancelled</a>
                                <a href="/admin/order?filter=<%= filter %>&status=Delivered" class="btn btn-sm btn-primary">Delivered</a>
                                <a href="/admin/order?filter=<%= filter %>&status=Returned" class="btn btn-sm btn-primary">Returned</a>
                            </div>
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Product Name</th>
                                    <th scope="col">Payment Method</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Order Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Change</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orderData.length > 0) { %>
                                    <% for(let i=0;i<orderData.length;i++){ %>
                                        <% for(let j=0; j<orderData[i].items.length; j++) { %>
                                            <% if (orderData[i].currentData >= filterStartDate && orderData[i].currentData <= filterEndDate) { %>
                                                <% if (req.query.status === undefined || orderData[i].items[j].status === req.query.status) { %>
                                                    <!-- Display only orders with selected status -->

                                            <tr data-order-id="<%= orderData[i]._id %>" data-item-id="<%= orderData[i].items[j]._id %>">

                                            <td> # <%= orderData[i].items[j].productId._id %></td>
                                            <td>  <%= orderData[i].items[j].productId.name %></td>
                                            <td><b style="color: green;"><%= orderData[i].paymentMethod %></b></td>                                            
                                            <td>
                                                <% var productId = orderData[i].items[j].productId; %>
                                                <% var offer = orderData[i].items[j].offer; %>
                                                <% var quantity = orderData[i].items[j].quantity; %>
                                                
                                                <% var productPrice = productId.price; %>
                                                <% var offerPercentage = offer ? offer.percentage : 0; %>
                                                
                                                <% var discountedPrice = productPrice * (1 - offerPercentage / 100); %>
                                                <% var totalPrice = discountedPrice * quantity; %>
                                                ₹<%= totalPrice %>
                                                
                                            </td>
                                            <td><span class="badge rounded-pill alert-danger"><%= orderData[i].paymentStatus %></span></td>
                                            <td><span id="status"  class="badge rounded-pill alert-success"><%= orderData[i].items[j].status %></span></td>
                                            <td><%= orderData[i].currentData.toLocaleDateString() %></td>
                                            <td> 
                                                
                                                <select class="status-dropdown" data-order-id="<%= orderData[i].items[j]._id %>">
                                                    <% if (orderData[i].items[j].status === 'Cancelled') { %>
                                                        <option value="<%= orderData[i].items[j].status %>" selected><%= orderData[i].items[j].status %></option>
                                                    <% } else if (orderData[i].items[j].status === 'Processing') { %>
                                                        <option value="<%= orderData[i].items[j].status %>" selected><%= orderData[i].items[j].status %></option>
                                                        <option value="Order Placed">Order Placed</option>
                                                        <option value="Delivered">Delivered</option>
                                                    <% } else if (orderData[i].items[j].status === 'Order Placed') { %>
                                                        <option value="<%= orderData[i].items[j].status %>" selected><%= orderData[i].items[j].status %></option>
                                                        <option value="Delivered">Delivered</option>
                                                    <% } else if (orderData[i].items[j].status === 'Delivered') { %>
                                                        <option value="<%= orderData[i].items[j].status %>" selected><%= orderData[i].items[j].status %></option>
                                                        <% } else if (orderData[i].items[j].status === 'Returned') { %>
                                                            <option value="<%= orderData[i].items[j].status %>" selected><%= orderData[i].items[j].status %></option>
                                                        <% } %>
                                                </select>
                                                
                                            </td>
                                            
                                            <td class="text-end">
                                                <input type="hidden" value="<%= orderData[i]._id %>">
                                                <input type="hidden" value="<%= orderData[i].items[j]._id %>">

                                                <button class="btn btn-md rounded font-sm change-btn">Change</button>                                              
                                                 <div class="dropdown">
                                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm">
                                                        <i class="material-icons md-more_horiz"></i>
                                                    </a>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="/admin/vieworders?id=<%= orderData[i]._id %>&productId=<%= orderData[i].items[j].productId._id %>">
                                                            View detail</a>
                                                        
                                                    </div>
                                                </div> 
                                            </td>
                                        </tr>
                                        <% } %>
                                        <% } %>
                                    <% } %>
                                <% } %>
                                <% } %>
                                    </td>
                                </tr> 
                                
                            </tbody>
                        </table>
                    </div> 
                </div> 
            </div>

            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <% if (i === currentPage) { %>
                                <li class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
                            <% } else { %>
                                <li class="page-item"><a class="page-link" href="/admin/order?page=<%= i %>&filter=<%= filter %>"><%= i %></a></li>
                            <% } %>
                        <% } %>
                        <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                        <li class="page-item"><a class="page-link" href="/admin/order?page=<%= totalPages %>"><%= totalPages %></a></li>
                        <% if (currentPage === totalPages) { %>
                            <li class="page-item"><a class="page-link" href="/admin/order?page=1"><i class="material-icons md-chevron_right"></i></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/admin/order?page=<%= currentPage + 1 %>"><i class="material-icons md-chevron_right"></i></a></li>
                        <% } %>
                    </ul>
                </nav>
                
            </div>
         
            
