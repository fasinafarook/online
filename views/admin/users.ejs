    <tbody>
        <% if (users.length > 0) {
            for (let i = 0; i < users.length; i++) { %>
                <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].mobile %></td>
                    <td>
                        <% if (users[i].is_verified == 0) { %>
                            <span class="badge rounded-pill alert-danger">Inactive</span>
                        <% } else { %>
                            <span class="badge rounded-pill alert-success">Active</span>
                        <% } %>
                    </td>
                    <td>
                        <div>
                            <% if (users[i].is_verified == 0) { %>
                                <button type="button" onclick="toggleUserStatus('<%= users[i]._id %>', 'unblock')" class="badge badge-sm alert-success toggleButton" data-user-id="<%= users[i]._id %>">
                                    Unblock
                                </button>
                            <% } else { %>
                                <button type="button" onclick="toggleUserStatus('<%= users[i]._id %>', 'block')" class="badge badge-sm alert-danger toggleButton" data-user-id="<%= users[i]._id %>">
                                    Block
                                </button>
                            <% } %>
                        </div>
                    </td>
                </tr>
            <% }
        } else { %>
            <tr>
                <td colspan="5">Users Not Found</td>
            </tr>
        <% } %>
    </tbody>
</table>


<script>
  document.querySelectorAll('.toggleButton').forEach(button => {
    button.addEventListener('click', function() {
        const userId = this.dataset.userId;
        toggleUserStatus(userId, this.textContent.trim().toLowerCase());
    });
});


    async function toggleUserStatus(userId, action) {
        const confirmation = await Swal.fire({
            title: 'Confirmation',
            text: `Are you sure you want to ${action === 'block' ? 'block' : 'unblock'} the user?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'OK',
            cancelButtonText: 'Cancel',
        });

        if (confirmation.isConfirmed) {
            const response = await fetch(`/admin/users/toggleUserStatus/${String(userId)}`, { method: 'POST' });
            const result = await response.json();

            if (result) {
                const button = document.querySelector(`.toggleButton[data-user-id="${userId}"][data-action="${action}"]`);
                window.location.reload();
                button.innerText = result.is_verified === 1 ? 'Unblock' : 'Block';
                
            } else {
                Swal.fire('Error', result.message || 'Failed to toggle user status.', 'error');
            }
        }
    }
</script>
            
