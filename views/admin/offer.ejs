    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const offerButtons = document.querySelectorAll('.offer-btn');
    
            offerButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const offerId = this.parentNode.querySelector('.offerId').value;
                    const isActivate = this.textContent === 'Activate';
                    const offerStatus = this.parentNode.querySelector('.offerStatus').value;
    
                    Swal.fire({
                        title: isActivate ? 'Activate offer?' : 'Deactivate offer?',
                        text: isActivate ? 'Do you want to activate this offer?' : 'Do you want to deactivate this offer?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: isActivate ? '#28a745' : '#dc3545',
                        cancelButtonColor: '#d33',
                        confirmButtonText: isActivate ? 'Yes, activate it!' : 'Yes, deactivate it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch('/admin/updateofferStatus', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ offerId, is_active: offerStatus })
                            }).then(response => {
                                if (response.ok) {
                                return Swal.fire(isActivate ? 'Activated!' : 'Deactivated!', `offer has been ${isActivate ? 'activated' : 'deactivated'}.`, 'success');
                            } else {
