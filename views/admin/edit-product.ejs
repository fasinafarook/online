    <script>
        function displaySelectedImages(event) {
            const selectedImagesContainer = document.getElementById('selectedImagesContainer');
            selectedImagesContainer.innerHTML = '';

            const files = event.target.files;

            if (files && files.length > 0) {
                for (let i = 0; i < files.length; i++) {
                    const reader = new FileReader();
                    const img = document.createElement('img');
                    img.className = 'img-fluid rounded';
                    img.style.width = '100%';

                    reader.onload = function (e) {
                        img.src = e.target.result;
                    };

                    reader.readAsDataURL(files[i]);

                    selectedImagesContainer.appendChild(img);


                    const lineBreak = document.createElement('br');
                    selectedImagesContainer.appendChild(lineBreak);
                }
            }
        }

    </script>



    <script>
        const removedImages = [];

        function handleRemove(imageURL) {
            removedImages.push(imageURL);
            console.log('Removed Image URL:', imageURL);
            console.log('Removed Images Array:', removedImages);

            const imageElements = document.querySelectorAll(`img[src="/productimages/${imageURL}"]`);
            imageElements.forEach(image => {
                const parentDiv = image.parentNode.parentNode;
                parentDiv.remove();
            });

            // Update the value of the hidden input
            const hiddenInput = document.getElementById('removedImagesInput');
            hiddenInput.value = JSON.stringify(removedImages);
        }

        async function submitForm() {
            const hiddenInput = document.getElementById('removedImagesInput');
            const removedImages = JSON.parse(hiddenInput.value);

            try {
                const response = await fetch('/admin/edit-product/deleteimg', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ removedImages }),
                });

                if (response.ok) {
                    console.log('Images deleted successfully.');
                    return true;
                } else {
                    console.error('Failed to delete images.');
                    return false;
                }
            } catch (error) {
                console.error('Error during image deletion:', error);
                return false;
            }
        }

        document.getElementById('productForm').addEventListener('submit', async function (event) {
            event.preventDefault(); 2

            const formSubmitted = await submitForm(); // Attempt to delete images and submit form

            if (formSubmitted) {
                this.submit(); // If images are deleted successfully, submit the form
            }
        });
    </script>


