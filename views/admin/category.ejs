                <script>
                    document.querySelectorAll('.toggleButton').forEach(button => {
                        button.addEventListener('click',  function() {
                                    const categoryId = this.dataset.categoryId;
                                    toggleCategoryStatus(categoryId, this.textContent.trim().toLowerCase());
                                });
                    });
                
                    async function toggleCategoryStatus(categoryId, action) {
                      
                
                        const confirmation = await Swal.fire({
                            title: 'Confirmation',
                            text: `Are you sure you want to ${action === 'block' ? 'block' : 'unblock'} the Category?`,
                            icon: 'question',
                            showCancelButton: true,
                            confirmButtonText: 'OK',
                            cancelButtonText: 'Cancel',
                        });
                
                        if (confirmation.isConfirmed) {
                            const response = await fetch(`/admin/category/toggleCategoryStatus/${categoryId}`, { method: 'POST' });
                            const result = await response.json();
                
                            if (result) {
                                const button = document.querySelector(`.toggleButton[data-category-id="${categoryId}"]`);
                                    window.location.reload();
                                      button.innerText = result.is_active === 1 ? 'Unblock' : 'Block';
                                    
                            } else {
                                Swal.fire('Error', 'Failed to toggle category status.', 'error');
                            }
                        }
                    }
                </script>  
                
