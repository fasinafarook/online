    <script>
        const form = document.getElementById('BannerForm')
         form.addEventListener('submit', function(event) {
            event.preventDefault();
            const bannername = document.getElementById('bannername').value;
            const target = document.getElementById('target').value;
            const date = document.getElementById('date').value;
            const text = document.querySelector('textarea[name="text"]').value
            document.querySelectorAll('.text-danger').forEach(element => element.textContent = '');

            if (bannername.trim() === '') {
            document.getElementById('bannerError').textContent = 'Banner Name is required.';
            return false;
            }

            if (target.trim() === '') {
            document.getElementById('targetError').textContent = 'Target is required.';
            return false;
            }

            if (date.trim() === '') {
            document.getElementById('dateError').textContent = 'Date is required.';
            return false;
            }

            if (text.trim() === '') {
            document.getElementById('textError').textContent = 'Text is required.';
            return false;
            }

            
            this.submit();
    
    })

    </script>

<script>
    function handleImageSelection(event) {
        const imageContainer = document.getElementById('imagePreviewContainer');
        const files = event.target.files;

        if (files.length > 5) {
            document.getElementById('imageError').innerText = 'Please select up to 5 images.';
            event.target.value = ''; 
            return;
        } else {
            document.getElementById('imageError').innerText = '';
        }

        imageContainer.innerHTML = '';

        for (let i = 0; i < files.length; i++) {
            const reader = new FileReader();
            const img = document.createElement('img');
            img.className = 'img-fluid rounded';
            img.style.width = '20%';

            reader.onload = function (e) {
                img.src = e.target.result;
            };

            reader.readAsDataURL(files[i]);

            imageContainer.appendChild(img);

            const deleteButton = document.createElement('button');
            deleteButton.type = 'button';
            deleteButton.className = 'btn btn-danger btn-sm';
            deleteButton.textContent = 'Delete';
            deleteButton.onclick = function () {
                imageContainer.removeChild(img);
                imageContainer.removeChild(deleteButton);
                event.target.value = ''; 
            };

            imageContainer.appendChild(deleteButton);
        }
    }

</script>
    
