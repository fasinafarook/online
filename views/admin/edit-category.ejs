                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Category</h2>

                    </div>
                </div>
                <div class="col-9">
                    <div class="card">
                        <div class="card-body">
                            <div class="row gx-5">

                                <div class="col-lg-9">
                                    <section class="content-body p-xl-4">
                                        <form action="/admin/edit-category" method="POST" enctype="multipart/form-data"
                                            id="categoryform">
                                            <% if(typeof message !=='undefined' ){ %>
                                                <div class="alert  bg-white text-danger" role="alert"
                                                    style="text-align: center;">
                                                    <%=message %>
                                                </div>
                                                <% } %>
                                                    <% if (category) { %>
                                                        <label for="name">Category Name:</label>
                                                        <input type="text" id="names" name="name"
                                                            value="<%= category.name %>" required>
                                                        <span id="names-error" class="error"></span>
                                                        <br>
                                                        <br>
                                                        <label for="image"></label>
                                                        <img src="/categoryimages/<%= category.image %>" alt=""
                                                            style="max-width: 100px;">
                                                        <br>
                                                        <br>
                                                        <label for="newImage">New Image:</label>
                                                        <input type="file" class="form-control-file" id="newImages"
                                                            name="image">
                                                        <input type="hidden" name="id" value="<%= category._id %>">
                                                        <br><br>

                                                        <!-- Image Preview for New Image -->
                                                        <div id="imagePreviewContainer" class="mb-3"
                                                            style="max-width: 300px;">
                                                            <label for="imagePreview"></label>
                                                            <img id="imagePreview" alt="" style="max-width: 100px;">
                                                        </div>


                                                        <button type="submit">Edit Category</button>
                                                        <% } else { %>
                                                            <p>Category not found.</p>
                                                            <% } %>
                                        </form>
                                    </section>
                                    <!-- content-body .// -->
