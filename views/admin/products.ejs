                        async function toggleProductStatus(productId, action) {
                           
                
                            const confirmation = await Swal.fire({
                                title: 'Confirmation',
                                text: `Are you sure you want to ${action === 'block' ? 'block' : 'unblock'} the product?`,
                                icon: 'question',
                                showCancelButton: true,
                                confirmButtonText: 'OK',
                                cancelButtonText: 'Cancel',
                            });
                
                            if (confirmation.isConfirmed) {
                                const response = await fetch(`/admin/products/toggleProductStatus/${productId}`, { method: 'POST' });
                                const result = await response.json();
                
                                if (result) {
                                    const button = document.querySelector(`.toggleButton[data-product-id="${productId}"][data-action="${action}"]`);
                                    window.location.reload();
                                      button.innerText = result.is_product === 1 ? 'Unblock' : 'Block';
                                    
                                } else {
                                    Swal.fire('Error', result.message || 'Failed to toggle product status.', 'error');
                                }
                            }
                        }
