    <script>
        const arrayforStatus = JSON.parse(`<%=arrayforStatus%>`)
        const data = {
            labels: ['Processing', 'Cancelled', 'Delivered', 'Return', 'Order Placed'],
            datasets: [{
                label: 'My First Dataset',
                data: arrayforStatus,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 206, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(165, 42, 42, 0.8)'
                ],
            }]
        };

        var ctx = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false,
            },
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            const topSellingCategories = JSON.parse('<%- topSellingCategories %>');

            const labels = topSellingCategories.map(product => product.categoryName);
            const quantities = topSellingCategories.map(product => product.totalQuantity);

            const ctx = document.getElementById('topSellingCategoriesChart').getContext('2d');
            const topSellingCategoriesChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Total Quantity Sold',
                        data: quantities,
                        backgroundColor: 'rgba(54, 162, 235, 0.8)', // Blue color for bars
                        borderColor: 'rgba(54, 162, 235, 1)', // Border color for bars
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,

                }
            });
        });
    </script>
