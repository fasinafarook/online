                                    </tr>
                                </thead>
                                <tbody id="cartItems">
                                    <% if (CartData && CartData.product && CartData.product.length > 0) { %>
                                        <% CartData.product.forEach(productItem => { %>
                                            <tr>
                                                <td class="image product-thumbnail">
                                                    <a href="/product?id=<%= productItem.productId._id %>">
                                                        <img src="/productimages/<%= productItem.productId.image[0] %>" alt="">
                                                    </a>
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name">
                                                        <a href="shop-product-right.html"><%= productItem.productId.name %></a>
                                                    </h5>
                                                    <p class="font-xs">by <%=productItem.productId.author %></p>
                                                </td>
                                                <td class="price" data-title="Price">
                                                    <span>₹<%= productItem.productId.price %></span>
                                                </td>
                                                <td class="offer-price" data-title="Offer Price">
                                                    <% if (productItem.offer && productItem.offer.percentage > 0) { %>
                                                        <% 
                                                            var offerPrice = productItem.productId.price * (1 - productItem.offer.percentage / 100); 
                                                        %>
                                                        <span>₹<%= offerPrice.toFixed(2) %></span>
                                                    <% } else { %>
                                                        <p>no offer</p>
                                                    <% } %>
                                                </td>
                                                <td class="text-center" data-title="Stock">
                                                    <div class="product_count">
                                                        <label for="qty">Quantity:</label>
                                                        <input type="number" name="qty" id="sst_<%= productItem.productId._id %>" value="<%= productItem.Quantity %>" title="Quantity:" class="input-text qty" readonly style="width: 60px; height: 20px;">
                                                        <button onclick="incrementQuantity('<%= productItem.productId._id %>')" class="increase items-count" type="button">
                                                            <i class="lnr lnr-chevron-up"></i>+
                                                        </button> 
                                                        <button onclick="decrementQuantity('<%= productItem.productId._id %>')" class="reduced items-count" type="button">
                                                            <i class="lnr lnr-chevron-down"></i>-
                                                        </button>
                                                        <div id="errorMessage_<%= productItem.productId._id %>"></div>
                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Cart">
                                                    <span>
                                                        <h5 id="tPrice_<%= productItem.productId._id %>" name="totalPrice1">
                                                            <% if (productItem.offer && productItem.offer.percentage > 0) { %>
                                                                <% 
                                                                    var Price = productItem.productId.price * (1 - productItem.offer.percentage / 100) * productItem.Quantity; 
                                                                %>
                                                                <span>₹<%= Price.toFixed(2) %></span>
                                                            <% } else { %>
                                                                ₹<%= productItem.productId.price * productItem.Quantity %>
                                                            <% } %>
                                                        </h5>
                                                    </span>
                                                </td>
                                                <td>
                                                    <button class="btn btn-warning" onclick="confirmRemove('<%= productItem.productId._id %>')">Remove</button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">
                                                <p class="text-muted">Cart is empty.</p>
                                                <!-- Optionally, you can add a link to redirect users to the product listing or shopping page -->
                                                <a href="/product" class="btn btn-primary">Shop Now</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div class="cart-action text-end">
                            <a class="btn " href="/"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                        </div>
                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                        <div class="row mb-50">
                            <div class="col-lg-6 col-md-12">
