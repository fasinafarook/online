                                    <div class="heading_s1 mb-3">
                                        <h4>Cart Totals</h4>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td class="cart_total_label">Shipping</td>
                                                    <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free Shipping</td>
                                                </tr>
                                                <tr>
                                                    <td class="cart_total_label">Total</td>
                                                    <td class="cart_total_amount">
                                                        <span class="font-lg fw-900 text-brand">
                                                            <% if (CartData && CartData.product && CartData.product.length > 0) { %> 
                                                                <span id="totalSum"></span>
                                                            <% } else { %> 
                                                                <p>Cart is empty</p>
                                                            <% } %>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <a href="<%= (CartData && CartData.product && CartData.product.length > 0) ? '/checkout' : '#' %>" class="btn <%= (CartData && CartData.product && CartData.product.length > 0) ? '' : 'disabled' %>">
                                        <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
